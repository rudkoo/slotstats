{

    "description": "Slot statistics",
    "manifest_version": 3,
    "name": "Slotstats",
    "version": "1.0",

    "permissions": [
        "webNavigation",
        "webRequest",
        "storage",
        "tabs",
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "title": "Your Browser Action Name"
    },
    
    "web_accessible_resources": [{
        "resources": ["requests.js"],
        "matches": ["<all_urls>"]
    }],
    
    "content_scripts": [
    {
        "matches": [
            "*://*.pragmaticplay.net/gs2c/html5Game.do*",
            "*://*.pragmaticplay.net/gs2c/common/games-html5/games/vs/*/*.html*",
            "*://*.yggdrasilgaming.com/slots/*/*",
            "*://*.yggdrasilgaming.com/app/*/*",
            "*://*.yggdrasilgaming.com/init/launchClient.html*",
            "*://*.localhost/slotstats_tester/*"
        ],
        "match_about_blank": true,
        "run_at": "document_start",
        "all_frames": true,
        "js": [
            "inject.js"
        ]
    }],
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; script-src-elem 'self'; object-src 'self'"
    }
}
